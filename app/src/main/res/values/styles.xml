<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2CCC00</item>
        <item name="colorPrimaryDark">#21B300</item>
        <item name="colorAccent">@android:color/background_light</item>
    </style>

    <style name="kalpanapapersTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2CCC00</item>
        <item name="colorPrimaryDark">#21B300</item>
        <item name="colorAccent">@android:color/background_light</item>
        <item name="android:windowBackground">@drawable/kalpanapapers_activity_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>